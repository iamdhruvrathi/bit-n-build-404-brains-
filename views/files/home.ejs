<% layout("layouts/boilerplate") %>

<!-- Hero Section -->
<div class="hero-section">
    <div class="hero-content">
        <h1>Organize Your Wardrobe with Ease</h1>
        <p>Keep track of your clothes, create outfits, and make sustainable choices effortlessly.</p>
        <div class="hero-buttons">
            <button class="scan-btn">Scan Outfit</button>
            <button class="add-btn" ><a href="/add-collections">Add Collection</a></button>
        </div>
        <div class="search-bar">
            <input type="text" placeholder="Search your wardrobe...">
            <button>Search</button>
        </div>
    </div>
    <div class="hero-illustration">
        <img src="assets/hero-man.svg" alt="Wardrobe Illustration">
    </div>
</div>

<!-- Wardrobe Section -->
<div class="wardrobe-section">
    <div class="category-buttons">
        <button class="category-btn active" data-category="shirts">Shirts</button>
        <button class="category-btn" data-category="pants">Pants</button>
        <button class="category-btn" data-category="watches">Watches</button>
        <button class="category-btn" data-category="belts">Belts</button>
        <button class="category-btn" data-category="shoes">Shoes</button>
        <button class="category-btn" data-category="perfume">Perfume</button>
    </div>
    <div class="wardrobe-container">
        <button class="nav-btn prev">&lt;</button>
        <div class="wardrobe-items">
            <div class="category-section" id="shirts">
                <div class="item-card">
                    <img src="/placeholder.svg?height=200&width=150" alt="Shirt 1">
                    <h3>Classic White Shirt</h3>
                    <p>$49.99</p>
                </div>
                <div class="item-card">
                    <img src="/placeholder.svg?height=200&width=150" alt="Shirt 2">
                    <h3>Blue Denim Shirt</h3>
                    <p>$59.99</p>
                </div>
                <div class="item-card">
                    <img src="/placeholder.svg?height=200&width=150" alt="Shirt 3">
                    <h3>Striped Polo Shirt</h3>
                    <p>$39.99</p>
                </div>
                <div class="item-card">
                    <img src="/placeholder.svg?height=200&width=150" alt="Shirt 4">
                    <h3>Black T-Shirt</h3>
                    <p>$29.99</p>
                </div>
                <div class="item-card">
                    <img src="/placeholder.svg?height=200&width=150" alt="Shirt 5">
                    <h3>Floral Print Shirt</h3>
                    <p>$54.99</p>
                </div>
                <div class="item-card">
                    <img src="/placeholder.svg?height=200&width=150" alt="Shirt 6">
