<% layout("layouts/boilerplate") %>



<div class="hero-section">
    <div class="hero-content">
        <h1>Organize Your Wardrobe with Ease</h1>
        <p>Keep track of your clothes, create outfits, and make sustainable choices effortlessly.</p>
        <div class="hero-buttons">
            <button class="scan-btn">Scan Outfit</button>
            <button class="add-btn">Add Collection</button>
        </div>
        <div class="search-bar">
            <input type="text" placeholder="Search your wardrobe...">
            <button>Search</button>
        </div>
    </div>
    <div class="hero-illustration">
        <img src="assets/hero-man.svg" alt="Wardrobe Illustration">
    </div>
</div>
